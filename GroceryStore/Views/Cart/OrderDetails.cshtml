@model GroceryStore.Models.DataLayer.Order

@{
    ViewBag.Title = "Order Details";
}

<h2>Order Details for Order ID: @Model.OrderId</h2>

<p><strong>Order Date:</strong> @Model.OrderDate?.ToString("g")</p>
<p><strong>Total Amount:</strong> @Model.TotalAmount?.ToString("C")</p>

<h4>Order Items</h4>
<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Product?.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price?.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="PastOrders" class="btn btn-primary">Back to Past Orders</a>
